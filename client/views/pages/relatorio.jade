html
  head
    title SiGO | Relatório
    include ../partials/head.jade
    link(href='../bootstrap-datepicker/css/bootstrap-datepicker.min.css', rel='stylesheet')
    script(src='../bootstrap-datepicker/js/bootstrap-datepicker.min.js')
    script(src='../bootstrap-datepicker/locales/bootstrap-datepicker.pt-BR.min.js')
  body.sigo_relatorio
    include ../partials/menu_lateral.jade

    div.container
      div.jumbotron
        h2 Relatórios 
        div#filter-form
          form(role="form")#rel-form
            div.radio
              label.radio-inline
                input(type="radio", name="optradio", value="agendamento", checked) 
                | Agendamentos
              label.radio-inline
                input(type="radio", name="optradio", value="os") 
                | OS
            div.input-daterange.input-group#datepicker
              span.input-group-addon De: 
              input(type="text", class="input-sm form-control", name="start", required)
              span.input-group-addon Até:
              input(type="text", class="input-sm form-control", name="end", required)
            br
            .btn-group
              button.btn.btn-primary(type="submit", class="btn btn-default") Gerar
              
        div.table-responsive#table-container-agendamento
          h4 Agendamentos
          table.table.table-hover.table-condensed
            thead
              tr 
                th Ativos
                th Cancelados
            tbody
        div.table-responsive#table-container-os
          h4 OS
          table.table.table-hover.table-condensed
            thead
              tr 
                th Aguardando
                th Aprovadas
                th Finalizadas
                th Suspensas
            tbody
        div.table-responsive#table-container-os-suspensa
          h4 OS Suspensas
          table.table.table-hover.table-condensed
            thead
              tr 
                th Valor
                th Prazo de execução
            tbody
script(src='js/relatorio.js')
